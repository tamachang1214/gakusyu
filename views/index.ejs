<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>My Playground</title>

    <style></style>
  </head>
  <body>
    <header>
      <div class="header-logo">お問い合わせ者一覧</div>
    </header>
    <ul>
      <% contacts.forEach((item) => { %>
        <li>
          <span><%= item.id %></span>
          <span><%= item.name %></span>
          <form action="/delete/<%= item.id %>" method="post" style="display:inline;">
            <button type="submit">削除</button>
          </form>
        </li>
      <% }) %>
    </ul>

    <script></script>
  </body>
</html>
